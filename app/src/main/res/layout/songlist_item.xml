<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="45dp"
    android:padding="2dp">
    <ImageView
        android:id="@+id/img_songlist"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/tv_songlist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="歌单"
        android:textSize="18sp"
        android:layout_alignTop="@id/img_songlist"
        android:layout_toRightOf="@id/img_songlist"
        />
    <TextView
        android:id="@+id/tv_songlist_replaytimes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:textSize="10sp"
        android:layout_alignBottom="@id/img_songlist"
        android:layout_toRightOf="@id/img_songlist"
        />
    <TextView
        android:id="@+id/tv_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="qq music"
        android:textSize="10sp"
        android:layout_alignBottom="@id/img_songlist"
        android:layout_toLeftOf="@id/bt_delete"
        android:layout_marginRight="5dp"
        android:alpha="0.5"
        />
    <Button
        android:id="@+id/bt_delete"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:text="D"
        android:textSize="10sp"
        android:layout_alignParentRight="true"
        android:alpha="0.5"
        />
</RelativeLayout>