<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    >
    <RelativeLayout
        android:id="@+id/tv_song_order_bg"
        android:layout_width="40dp"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/tv_song_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="1"
            android:layout_centerInParent="true"
            android:textSize="14sp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_toRightOf="@id/tv_song_order_bg"
        android:text="歌曲名"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/tv_song_replaytimes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:textSize="8sp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/tv_song_name"
        android:layout_alignBaseline="@id/tv_song_name"
        />
    <TextView
        android:id="@+id/tv_song_singger_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="歌手 - 专辑"
        android:textSize="10sp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@id/tv_song_name"
        />
    <ImageView
        android:id="@+id/img_downloaded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>